<h1>Edit Figure!</h1>

<form method="POST" action="/figures/<%= @figure.id %>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <label>Name:</label>
    <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name">

  <br>

  <label>Title(s)</label>
    <% Title.all.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>> <%= title.name %></input>
      <br>
    <% end %>

  <br>

  <label>Create New Title:</label>


</form>
